<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="306dp"
    android:layout_height="174dp"
    android:background="#152F99C8"
    android:padding="10dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Font size"
            android:textSize="29dp"
            android:fontFamily="@font/tw_cen_mt"
            android:textColor="@color/font_size_font_color" />

        <RadioGroup
            android:id="@+id/radio_button_font_size_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="6dp">

                <RadioButton
                    android:id="@+id/small_font_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Small"
                    android:fontFamily="@font/tw_cen_mt"
                    android:textSize="18dp"
                    android:textColor="@color/font_size_font_color"/>

                <RadioButton
                    android:id="@+id/medium_font_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium"
                    android:fontFamily="@font/tw_cen_mt"
                    android:textSize="18dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/font_size_font_color"/>

                <RadioButton
                    android:id="@+id/large_font_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Large"
                    android:fontFamily="@font/tw_cen_mt"
                    android:textSize="18dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/font_size_font_color"/>

        </RadioGroup>
    </LinearLayout>

</LinearLayout>