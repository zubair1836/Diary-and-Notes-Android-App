<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:visibility="gone"
    android:background="@drawable/ads_remove_background"
    android:id="@+id/rl_show"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/screen_main"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/app"
            android:src="@drawable/ic_icon_awesome_ad"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:fontFamily="@font/tw_cen_mt"
            android:id="@+id/delaroy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Ads Free"
            android:textColor="@color/white"
            android:textSize="21dp"
            android:layout_below="@+id/app"
            android:layout_marginTop="16dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:background="@drawable/ads_button_background"
            android:textColor="@color/white"
            android:text="continue"
            android:onClick="onSubscribeButtonClicked"
            android:textSize="39dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="41dp"
            android:layout_marginRight="41dp" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/rasbita_subscribe"
            android:src="@drawable/subscribe"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</RelativeLayout>